<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lesson2.Lesson_2">


    <TextView
        android:id="@+id/calc_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/fone"
        android:gravity="end"
        android:textSize="@dimen/OutTextSize"
        app:layout_constraintBottom_toTopOf="@+id/grid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calc_view">

        <com.google.android.material.button.MaterialButton
            style="@style/PurpleButton"
            android:id="@+id/butt_ะก"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/buttonHeight"
            android:layout_columnWeight="1"
            android:elevation="@dimen/elevation"
            android:text="@string/text_c"
            android:textSize="@dimen/buttonTextSize" />

        <com.google.android.material.button.MaterialButton
            style="@style/PurpleButton"
            android:id="@+id/butt_delete"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/buttonHeight"
            android:layout_columnWeight="1"
            android:elevation="@dimen/elevation"
            android:stateListAnimator="@null"
            android:translationZ="4dp"
            android:text="@string/text_del"
            android:textSize="@dimen/buttonTextSize" />

        <com.google.android.material.button.MaterialButton
            style="@style/PurpleButton"
            android:id="@+id/butt_percent"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/buttonHeight"
